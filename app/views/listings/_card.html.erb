<div class="companies-index-block">
  <% @listings.each do |listing| %>
    <div class="col-lg-12 col-md-12 col-sm-12">
      <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
          <div class="row listroBox">
            <div class="col-lg-5 col-md-5 col-sm-6 col-xs-12 Nopadding">
              <figure> <a class="wishlist_bt"></a>
                <a>
                  <%= image_tag listing.attachments.first.attachment.variant(resize_to_fill: [400, 250]),
                    class: "img-fluid" , alt: listing.name %>
                    <div class="read_more">
                      <%= link_to 'Read More' , listing_path(listing), class: "btn btn-secondary btn-lg" %>
                    </div>
                </a>
              </figure>
            </div>
            <div class="col-lg-7 col-md-7 col-sm-6 col-xs-12 Nopadding">
              <div class="listroBoxmain">
                <h3>
                  <%= link_to listing.name, listing_path(listing) %>
                </h3>
                <span class="card-elipses text-center" style="margin: 4%; height: 98px;">
                  <%= listing.rich_description %>
                </span>
                <a class="address" href="">Get directions</a>
              </div>
              <ul>
                <li>
                  <%= link_to 'View listing', listing_path(listing), class: "Ropen" %>
                </li>
                <li>
                  <div class="R_retings"><span><%= link_to listing.name, listing_path(listing) %><em>122 Reviews</em></span><strong>8.2</strong></div>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
    <% end %>
</div>