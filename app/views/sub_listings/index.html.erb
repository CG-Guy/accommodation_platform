<p id="notice"><%= notice %></p>

<h1>Sub Listings</h1>

<table>
  <thead>
    <tr>
      <th>Status</th>
      <th>Price</th>
      <th>Rooms</th>
      <th>Guest</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sub_listings.each do |sub_listing| %>
      <tr>
        <td><%= sub_listing.status %></td>
        <td><%= sub_listing.price %></td>
        <td><%= sub_listing.rooms %></td>
        <td><%= sub_listing.guest %></td>
        <td><%= link_to 'Show', sub_listing %></td>
        <td><%= link_to 'Edit', edit_sub_listing_path(sub_listing) %></td>
        <td><%= link_to 'Destroy', sub_listing, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

